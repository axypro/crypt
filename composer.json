{
    "name": "axy/crypt",
    "type": "library",
    "description": "Some crypt algorithms",
    "keywords": [
        "Crypt",
        "Hash",
        "APR_MD5"
    ],
    "homepage": "https://github.com/axypro/crypt",
    "license": "MIT",
    "authors": [
        {
            "name": "Oleg Grigoriev",
            "email": "go.vasac@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "axy/random": "~0.2.1",
        "axy/binary": "~0.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~10.0.15",
        "squizlabs/php_codesniffer": "=3.7.1"
    },
    "autoload": {
        "psr-4": {
            "axy\\crypt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "axy\\crypt\\tests\\": "tests"
        }
    },
    "archive": {
        "exclude": [
            "/tests/*",
            "/devops/*",
            "/doc/*",
            "/*.sh",
            "/*.xml.dist",
            "/CHANGELOG.md"
        ]
    }
}
